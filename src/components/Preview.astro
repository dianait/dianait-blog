---
import "@fontsource/alegreya-sans-sc"
const {post} = Astro.props;
---

<section>
    <img src={post.frontmatter.heroImage} width="50" height="50"/>
    <article>
        <a href={post.url}>{post.frontmatter.title}</a>
        <time datetime={post.frontmatter.pubDate}>
            ðŸ“† {new Date(post.frontmatter.pubDate).toLocaleDateString('es-ES', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
            })}
        </time>
    </article>
</section>
<style>
    section {
        width: 100%;
        margin: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: start;
        align-content: center;
        padding: 1rem;
        border-radius: 5px;
    }
    time {
        margin-left: 1rem;
        color: gray;
        font-size: .9rem;
        display: block;
    }
    a {
        text-decoration: none;
        font-size: 1.8rem;
        padding-left: 1rem;
        font-family: "Alegreya Sans SC", sans-serif; 
    }

    img {
        width: 70px;
        height: 70px;
        border-radius: 20%;
        margin-right: .5rem;
       object-fit: cover;
    }
</style>
