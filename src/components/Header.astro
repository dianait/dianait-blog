---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import "@fontsource/be-vietnam"
---

<header>
	<a class="header" href="/"><h2>
		{`📱 🍏 🤖 ${SITE_TITLE}`}
	</h2></a>
	<nav>
		<HeaderLink href="https://twitter.com/dianait_" target="_blank">
			<img src={`../img/social/twitter.png`}  width={37} alt="@dianait_ twitter profile"/> 
		</HeaderLink>
		<HeaderLink href="https://github.com/dianait" target="_blank">
			<img src={`../img/social/github.png`}  width={37} alt="dianait github profile" /> 
		</HeaderLink>
		<HeaderLink href="https://www.linkedin.com/in/dianahernandezsoler" target="_blank">
			<img src={`../img/social/linkedin.svg`}  width={37} alt="Diana Hernández linkedin profile"/>
		</HeaderLink>
		<HeaderLink href="https://www.flickr.com/photos/elinstantedecisivo" target="_blank">
			<img src={`../img/social/flickr.svg`}  width={37} alt="Diana flickr profile"/> 
		</HeaderLink>

	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
		padding: 0;
		text-align: center;
	}
	h2 {
		margin: 0.5em 0;
		font-size: 2.9em;
		font-family: "Be Vietnam", sans-serif;
	}

	a.header {
		color: inherit;
		text-decoration: none;
	}

	img {
		border-radius: 5px;
	}
</style>
